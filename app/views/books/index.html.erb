<%= render "shared/sidebar" %>

<div class="col-md-8 offset-md-1">
	<h2>Books</h2>
	  
    <table class="table">
					<thead>
						<tr>
						  <th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
				  <tbody>
					  <% @books.each do |book| %>
						  <tr>
							  <td><%= image_tag book.user.get_profile_image(50, 50) %>
							  <td><%= link_to book.title, book_path(book) %></td>
							  <td><%= book.body %></td>
						  </tr>
						<% end %>
				</tbody>
			</table>

		</div>
	</div>