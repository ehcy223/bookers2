<%= render "shared/sidebar" %>

<div class="col-md-8 offset-md-1">
	<h2>Book detail</h2>
	<table class="table">
		<tbody>
      <tr>
        <td>
          <%= image_tag @book.user.get_profile_image(100, 100) %><br>
          <%= link_to @book.user.name, user_path(@book.user), class: "d-block mt-1"%>
        </td>
         <td><strong></strong> <%= @book.title %></td>
         <td><strong></strong> <%= @book.body %></td>
         <% if current_user == @book.user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success' %></td>
            <td><%= link_to 'Delete', book_path(@book), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %></td>
          <% end %>
        </tr>
    </tbody>
  </table>
</div>
			