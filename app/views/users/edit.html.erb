<h2 style="text-align: center;">User info</h2>

<div style="display: flex; justify-content: center;">
  <div style="width: 500px; margin 0 auto;">
     <%= form_with(model: @user, local: true, html: { multipart: true }) do |f| %>

       <div class="mb-3" style="text-align: left;">
        <%= f.label :name, "名前" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3" style="text-align: left;">
      <%= f.label :profile_image, "image" %><br>

      <% if @user.profile_image.attached? %>
        <%= image_tag(@user.profile_image, width: 100, class: "mb-2") %><br>
      <% end %>


      <div style="display: flex; align-items: center;">
        <%= f.file_field :profile_image %>
      </div>
    </div>

      <div  class="mb-3" style="text-align: left;">
        <%= f.label :introduction, "Introduction" %><br>
        <%= f.text_area :introduction, rows: 5, class: "form-control" %>
      </div>

      <div class="mb-3" style="text-align: left;">
        <%= f.submit "Update User", class: "btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>