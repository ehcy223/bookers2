<div class='container'>
  <div class='row'>
  <div style="display: flex; justify-content: center;">
    <div style="width: 500px; margin: 0 auto;">
    <h2 style="width: 100%;">User info</h2>

<div style="display: flex; justify-content: center;">
  <div style="width: 500px; margin 0 auto;">
     <%= form_with(model: @user, local: true, html: { multipart: true }) do |f| %>

    <% if @user.errors.any? %>
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj form being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
    <% end %>

       <div class="mb-3" style="text-align: left;">
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3" style="text-align: left;">
      <%= f.label :profile_image, "Image" %><br>

      <% if @user.profile_image.attached? %>
        <%= image_tag(@user.profile_image, width: 100, class: "mb-2") %><br>
      <% end %>


      <div style="display: flex; align-items: center;">
        <%= f.file_field :profile_image %>
      </div>
    </div>

      <div  class="mb-3" style="text-align: left;">
        <%= f.label :introduction, "Introduction" %><br>
        <%= f.text_area :introduction, rows: 5, class: "form-control" %>
      </div>

      <div class="mb-3" style="text-align: left;">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>

    <% end %>
  </div>
</div>